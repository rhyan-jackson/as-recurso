<div class="row vh-100">
  <div class="col-sm-11 col-md-10 col-lg-8 mx-auto d-flex flex-column h-100 py-3 position-relative">
    <!-- Header Card -->
    <div class="card shadow-sm bg-white mb-4">
      <div class="card-body p-3">
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to root_path, 
              class: 'btn btn-outline-secondary d-flex align-items-center justify-content-center',
              style: 'width: 38px; height: 38px;',
              title: 'Voltar' do %>
            <i class="bi bi-arrow-left"></i>
          <% end %>
          <h1 class="h5 mb-0 mx-4">Histórico de Pagamentos</h1>
          <div style="width: 38px"></div>
        </div>
      </div>
    </div>

    <!-- Main Content Wrapper -->
    <div class="flex-grow-1 d-flex flex-column" style="min-height: 0;">
      <!-- Scrollable Payments List -->
      <div class="flex-grow-1 overflow-auto" style="margin-right: -12px; padding-right: 12px;">
        <% if @payments.any? %>
          <% @payments.each do |payment| %>
            <div class="card shadow-sm bg-white mb-2">
              <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-2 d-inline-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                      <% if payment.method == "mbway" %>
                        <i class="bi bi-phone text-success" style="font-size: 1.2rem;"></i>
                      <% elsif payment.method == "revolut" %>
                        <i class="bi bi-credit-card text-success" style="font-size: 1.2rem;"></i>
                      <% else %>
                        <i class="bi bi-wallet2 text-success" style="font-size: 1.2rem;"></i>
                      <% end %>
                    </div>
                    <div>
                      <p class="small text-secondary mb-0">
                        <%= l(payment.created_at, format: :short) %>
                      </p>
                      <h2 class="h6 mb-0 fw-semibold"><%= number_to_currency(payment.amount, unit: "€", format: "%n%u") %></h2>
                    </div>
                  </div>
                  <% if payment.method == "mbway" %>
                    <%= image_tag "mbway-logo.png", alt: "MBWay", class: "payment-method-logo", style: "height: 47px; width: auto;" %>
                  <% elsif payment.method == "revolut" %>
                    <%= image_tag "revolut-logo.png", alt: "Revolut", class: "payment-method-logo", style: "height: 47px; width: auto;" %>
                  <% else %>
                    <span class="badge rounded-pill text-bg-light">
                      <%= payment.method.titleize %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Spacer for floating button -->
          <div style="height: 60px;"></div>
        <% else %>
          <div class="card shadow-sm bg-white">
            <div class="card-body p-4 text-center">
              <div class="rounded-circle bg-info bg-opacity-10 p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                <i class="bi bi-receipt text-info" style="font-size: 1.75rem;"></i>
              </div>
              <h3 class="h6 mb-2">Nenhum pagamento encontrado</h3>
              <p class="text-secondary small mb-0">Os seus pagamentos aparecerão aqui</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Floating Add Balance Button -->
    <%= link_to new_payment_path(@customer), class: "text-decoration-none floating-button" do %>
      <div class="d-flex align-items-center bg-light-blue rounded-4 shadow-lg">
        <div class="rounded-circle bg-success bg-opacity-10 p-2 d-inline-flex align-items-center justify-content-center m-2" style="width: 40px; height: 40px;">
          <i class="bi bi-plus-lg text-success" style="font-size: 1.2rem;"></i>
        </div>
        <div class="px-2 pe-4">
          <h3 class="h6 mb-0 text-dark">Precisa de carregar mais?</h3>
          <p class="small text-secondary mb-0">Adicione saldo à sua conta</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
.card {
  border: none;
  border-radius: 16px;
  transition: transform 0.2s ease-in-out;
}

.btn-outline-secondary {
  border-color: #dee2e6;
}

.btn-outline-secondary:hover {
  background-color: #f8f9fa;
  border-color: #dee2e6;
  color: #6c757d;
}

.payment-method-logo {
  object-fit: contain;
  opacity: 0.85;
  transition: opacity 0.2s ease-in-out;
}

.payment-method-logo:hover {
  opacity: 1;
}

.floating-button {
  position: fixed;
  bottom: 24px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  transition: transform 0.2s ease-in-out;
  min-width: 85%;
  max-width: 450px;
}

.floating-button:hover {
  transform: translateX(-50%) translateY(-2px);
}

.floating-button .rounded-4 {
  border-radius: 12px !important;
}

.bg-light-blue {
  background-color: #f0f7ff;
}

.floating-button:hover .bg-light-blue {
  background-color: #e6f0ff;
}

/* Hide scrollbar for Chrome, Safari and Opera */
.overflow-auto::-webkit-scrollbar {
  width: 6px;
}

.overflow-auto::-webkit-scrollbar-track {
  background: transparent;
}

.overflow-auto::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 3px;
}

/* Hide scrollbar for IE, Edge and Firefox */
.overflow-auto {
  scrollbar-width: thin;
  scrollbar-color: rgba(0, 0, 0, 0.2) transparent;
}

@media (max-width: 576px) {
  .card-body {
    padding: 0.75rem;
  }
  
  .payment-method-logo {
    height: 39px !important;
  }

  .floating-button {
    bottom: 16px;
  }
}
</style>