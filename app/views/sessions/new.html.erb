<div class="row min-vh-100 align-items-center justify-content-center">
  <div class="col-sm-10 col-md-8 col-lg-5">
    <div class="text-center mb-5">
      <div class="logo-container">
        <%= image_tag "ebuga-logo.png", alt: "eBUGA", class: "img-fluid", style: "max-width: 180px;" %>
      </div>
    </div>
    
    <div class="card shadow-sm bg-white p-4">
      <div class="card-body">
        <div class="text-center mb-5">
          <h2 class="h3 mb-3">Bem-vindo de Volta</h2>
          <p class="text-secondary small">Inicie sessão na sua conta</p>
        </div>

        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <%= form_with url: session_path, class: "needs-validation", data: { turbo: false } do |form| %>
          <div class="mb-4">
            <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: "Endereço de email",
                value: params[:email_address],
                class: "form-control" %>
          </div>

          <div class="mb-4">
            <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "Palavra-passe",
                maxlength: 72,
                class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= form.submit "Iniciar Sessão", class: "btn btn-primary py-3 fw-semibold" %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <div class="mb-2">
            Não tem uma conta?
            <%= link_to "Registar", new_registration_path, class: "text-decoration-none fw-semibold" %>
          </div>
          <div>
            <%= link_to "Esqueceu a palavra-passe?", new_password_path, class: "text-decoration-none text-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
